<UserControl x:Class="Dialog1.Views.DialogShow1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="{Binding Message}" FontSize="20" Margin="50 20 50 50"/>
            <Button Command="{Binding CloseDialogCommand}" CommandParameter="Yes" Content="Yes" Width="75" Height="25"  />
            <Button Command="{Binding CloseDialogCommand}" CommandParameter="No" Content="No" Width="75" Height="25" Margin="10,0,0,0"  />
            <Button Command="{Binding CloseDialogCommand}" CommandParameter="Cancel" Content="Cancel" Width="75" Height="25" Margin="10,0,0,0" />
        </StackPanel>
    </Grid>
</UserControl>
